                  AddAddressLine2RS = AddExternalAccountId.replace('BillingStreet2PH', '');
             
                  // Chat - Address Line 2
                  // ---------------------
                  AddAddressLine2Chat = AddExternalAccountIdChat.replace('BillingStreet2PH', '');
             
