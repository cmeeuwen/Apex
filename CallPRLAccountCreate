             // ----------------------------------------------------------------------------------------------------------------------------------------
             String AddIndustryRS = '';
             String AddIndustryChat = '';
             String AddIndustryMulti = '';
            
             If(GetAccountInfo.get(0).Industry != Null){
             String GetIndustry = GetAccountInfo.get(0).Industry;
            
