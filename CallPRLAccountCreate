             Else If(GetAccountInfo.get(0).Time_Zone__c == '7 - Alaska' || GetAccountInfo.get(0).Time_Zone__c == 'Alaska' || GetAccountInfo.get(0).Time_Zone__c == 'Alaska (-1)'){
                 
